{
  "build": {
    "builder": "dockerfile",
    "dockerfile": "deployment/docker/Dockerfile.railway"
  },
  "deploy": {
    "startCommand": "sh /app/entrypoint.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthCheck": {
      "command": "curl -f http://localhost:${PORT:-8000}/health || exit 1",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  }
}